@model IEnumerable<Padaria.Repository.Entities.Category>

@{
    ViewBag.Title = "List";
}

<h2 style="text-align:center">Category List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { categoryID = item.CategoryID }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Details", "Details", new { categoryID = item.CategoryID }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { categoryID=item.CategoryID },new {@class="btn btn-default" })
        </td>
    </tr>
}

</table>
