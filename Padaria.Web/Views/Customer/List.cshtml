@model IEnumerable<Padaria.Repository.Entities.Customer>

@{
    ViewBag.Title = "List";
}

<h2 style="text-align:center">Customer List</h2>

<p>
    @Html.ActionLink(linkText: "Create New",actionName: "Create", routeValues:null,htmlAttributes:new {@class="btn btn-primary"  })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID },htmlAttributes:new {@class="btn btn-default" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerID }, htmlAttributes: new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID }, htmlAttributes: new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
