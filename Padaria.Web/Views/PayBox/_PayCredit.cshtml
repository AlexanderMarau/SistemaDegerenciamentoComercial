                        <th>@Html.DisplayName("Phone")</th>
                        <th>@Html.DisplayName("CPF")</th>
                        <th></th>
                    </tr>

                    @foreach (var customer in Model.Customer)
                    {
                        <tr>
                            <td>@Html.DisplayFor(c => customer.Name)</td>
                            <td>@Html.DisplayFor(c => customer.Phone)</td>
                            <td>@Html.DisplayFor(c => customer.CPF)</td>
                            <td><button class="btn btn-default" id="btnCredit" onclick="completeCredit(@customer.CustomerID)">Select</button></td>
                        </tr>
                    }

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

