@model IEnumerable<Padaria.Repository.Entities.Stock>

@{
    ViewBag.Title = "List";
}

<hr />
<hr />
<h2 style="text-align:center">Stock List</h2>
<hr />
<p>
    @Html.ActionLink(linkText: "Create New",controllerName: "Product",actionName:"Create",routeValues: null,htmlAttributes:new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimunQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximunQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManageStock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinimunQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximunQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManageStock)
        </td>
        <td>
            @Html.ActionLink("Add", "Add", new { productID=item.ProductID },htmlAttributes: new {@class="btn btn-success" }) |
            @Html.ActionLink("Remove", "Remove", new { productID = item.ProductID }, htmlAttributes: new { @class = "btn btn-danger" })|
            @Html.ActionLink("Edit", "Edit", new { productID = item.ProductID }, htmlAttributes: new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
