        <dd>
            @Html.ValidationSummary(excludePropertyErrors: false, message: null, htmlAttributes: new { @style = "color:red" })
        </dd>

        <dt>

            @Html.DisplayNameFor(model => model.Users.FullName)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.Users.FullName, htmlAttributes: new { @class = "form-controla" })
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Users.UserName)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.Users.UserName, htmlAttributes: new { @class = "form-controla" })
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Users.LastAccess)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.Users.LastAccess, htmlAttributes: new { @class = "form-controla" })
        </dd>

    </dl>

    </dl>
</div>
